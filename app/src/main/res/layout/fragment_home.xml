<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFrag">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="horizontal">
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sw"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="QUEUEE"
                android:gravity="center_vertical"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:textAlignment="center"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvTotalque"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Queue"
        app:layout_constraintHorizontal_weight="1"
        android:textAlignment="center"
       app:layout_constraintTop_toTopOf="@+id/tvComplete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvComplete"
       />
    <TextView
        android:id="@+id/tvComplete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvTotalque"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvTotalqueNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tvCompleteNum"
        app:layout_constraintRight_toRightOf="@+id/tvTotalque"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        android:textSize="@dimen/h1"
        android:text="20"/>
    <TextView
        android:id="@+id/tvCompleteNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_ver_mar"
        app:layout_constraintTop_toBottomOf="@+id/tvComplete"
        app:layout_constraintLeft_toLeftOf="@+id/tvComplete"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:textSize="@dimen/h1"
        android:text="20"/>

</android.support.constraint.ConstraintLayout>